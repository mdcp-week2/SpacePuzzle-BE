// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User table
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  nickname  String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
}